<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style1.css">
    <title>
        <%= day %>
    </title>
</head>

<body>

    <header>
        <!-- Back button at the top -->
        <a href="/workouts" class="back-btn">Back</a>
        <h1>
            <%= day %> Workouts
        </h1>
    </header>

    <!-- Sub-Day Navigation -->
    <!-- Sub-Day Navigation -->
    <div class="day-nav">
        <% if (subDays && subDays.length> 0) { %>
            <% for (let sd of subDays.sort()) { %>
                <a href="/workouts/days/<%= day %>?subDay=<%= sd %>"
                    class="day-btn <%= currentSubDay == sd ? 'active' : '' %>">
                    Day <%= sd %>
                </a>
                <% } %>
                    <% } else { %>
                        <p>No sub-days found for this workout day.</p>
                        <% } %>
    </div>

    <% for (let workout of workouts) { %>
        <div class="workout-card">
            <img src="<%= workout.image %>" alt="<%= workout.name %>">
            <h2><a href="/workouts/<%= workout._id %>/show">
                    <%= workout.name %>
                </a></h2>
            <p>Weight: <b>
                    <%= workout.weight %>
                </b> kg</p>
            <p>Reps: <b>
                    <%= workout.reps %>
                </b>
            </p>
        </div>
        <% } %>
</body>

</html>